<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
      <h1><span class="navbar-brand badge bg-secondary">The Tech Blog</span></h1>
  </div>
</nav>

<div class="text-center">
    <h2>{{title}}</h2>
    <p>Posted by {{user.username}} on {{format_date date_created}}</p>
    <p>{{content}}</p>

    {{#each comments }}
    <p>
        {{this.comment}}
    </p>
    <p>-{{this.user.username}}, {{format_date this.date_created}}</p>
    {{/each}}
        {{#if logged_in}}
    <p>
    <div class="col-md-6">
        <h2>Comment</h2>

        <form class="form comment-form">
            <div class="form-group">
                <textarea class="form-input" type="text" data-id="{{id}}" id="comment"></textarea>
            </div>
            <div class="form-group">
                {{!-- <button class="btn btn-primary" type="submit">Submit</button> --}}
                <button class="btn btn-primary text-color" type="submit">Submit</button>
            </div>
        </form>
    </div>

    {{else}}

    </p>
    {{/if}}
</div>
<script src="/js/comment.js"></script>