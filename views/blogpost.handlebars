<div class="text-center">
    <h2>{{title}}</h2>
    <p>Posted by {{user.username}} on {{format_date date_created}}</p>
    <p>{{content}}</p>

    {{#each comments }}
    <p>
        {{this.comment}}
    </p>
    <p>-{{this.user.username}}, {{format_date this.date_created}}</p>
    {{/each}}
    <p>
    <div class="col-md-6">
        <h2>Comment</h2>

        <form class="form comment-form">
            <div class="form-group">
                <textarea class="form-input" type="text" id="comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
        {{#if logged_in}}

    {{else}}

    {{/if}}
    </p>
</div>